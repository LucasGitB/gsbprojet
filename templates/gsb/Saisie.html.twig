    <tr>
      <td>{{ form_row(form.repas_midi)}}</td>
      <td>{{ form_row(form.periode)}}</td>
      <td>{{ form_row(form.nuits)}}</td>
      <td>{{ form_row(form.etape)}}</td>
      <td>{{ form_row(form.km)}}</td>
      <td><button type="submit" class="btn btn-secondary">Valider</button></td>
              
    </tr>
  </tbody>
</table>
{{ form_end(form) }}



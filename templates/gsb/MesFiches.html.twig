{% extends 'base.html.twig' %}

{% block title %}Gsb{% endblock %}

{% block body %}
<header>
        <a class="nav-title-white" href="{{path('gsb')}}">
            <li>GSB - Galaxy Swiss Bourdin</li>
        </a>
        <a class="nav-title-white" href="{{path('app_logout')}}">
            <li><i class="fas fa-sign-out-alt"></i> Déconnexion</li>
        </a>
    </header>

    <section>


        <div class="navigation">

            <div class="profil">
                <i class="far fa-user-circle fa-2x"></i>
                <li>{{ app.user.username }}</li>
                <br>
            </div>
            <nav>
                <a href="{{path('saisiefiches')}}" class="interact">
                    <li><i class="fas fa-tasks"></i> Saisie fiche de frais</li>
                </a>
                <a href="{{path('mesfiches')}}" class="interact">
                    <li><i class="fas fa-tasks"></i> Mes fiches de frais</li>
                </a>
            </nav>
        </div>

        <div class="title">
        <br>
            <h1 class="title-head">Mes fiches de frais</h1>


<br>


            <div class="Periode">
                <h1>Période d'engagement : Janvier 2022</h1>
            </div>



<br>

            <div class="champsElementForfaitisé">
                <h1>Mois à sélectionner</h1>
                <br>
                <div class="englobeInput">
                    <input class="inputSaisie" type="date" name="" id="" value="01/10/2021">
                     <button type="submit" class="btn btn-light">Confirmer date</button>

                </div>

                {# {{ dump(fiches) }} #}
<br>
            <div class="Periode">
                <h1></h1>
            </div>


<div class="Fiches-screen">
                {% for fiche in fiches %}
                {% if fiche.users_id == app.user.id %}
                <table class="table table-dark">

<table class="table table-striped ">
  <thead class="tab-color">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Prix</th>
      <th scope="col">libellé</th>
      <th scope="col">justificatif {{fiche.id}}</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td> {{ fiche.prix }} €</td>
      <td>{{ fiche.nom }}</td>
    </tr>
  </tbody>
</table>
<div>
{% endif %}
{% endfor %}


<br>
                
    </section>  




{% endblock %}
